{
  "name": "habit-tracker",
  "version": "1.0.0",
  "description": "A beautiful, responsive web-based habit tracker",
  "main": "script.js",
  "type": "commonjs",
  "scripts": {
    "test": "jest tests/HabitTracker.final.test.js",
    "test:all": "jest",
    "test:watch": "jest --watch tests/HabitTracker.simple.test.js",
    "test:coverage": "jest --coverage tests/HabitTracker.final.test.js",
    "test:ci": "jest --ci --coverage --watchAll=false tests/HabitTracker.simple.test.js"
  },
  "keywords": ["habit", "tracker", "javascript", "local-storage"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "script.js",
      "!node_modules/**"
    ],
    "coverageReporters": ["text", "lcov", "html"],
    "coverageDirectory": "coverage",
    "testMatch": ["<rootDir>/tests/**/*.test.js"],
    "verbose": true
  }
}
